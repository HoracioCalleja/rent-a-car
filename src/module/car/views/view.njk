{% extends "views/layouts/base.njk" %}

{% block body %}
  <section class="hero is-light">
    <div class="hero-body">
      <div class="car-data"
      data-id={{ car.id }}
      data-brand={{ car.brand }}
      data-model={{ car.model }}
      data-year={{ car.year }}
      >
        <div class="container">
          <h1 class="title">
            {{ car.brand }}
            {{ car.model }}
            {{ car.year }}
          </h1>
          <ul class="subtitle">
            <li>{{ car.kms }} Kms</li>
            <li>Color: {{ car.color }}</li>
            <li>Air Conditioner: {{ car.ac }}</li>
            <li>Max passengers: {{ car.passengers }}</li>
            <li>Transmission: {{ car.transmission }}</li>
            <li>Price: $ {{ car.price }}</li>
            <li>Created: {{ car.createdAt }}</li>
            <li>Updated: {{ car.updatedAt }}</li>
          </ul>
          <div class="buttons">
            <a class="button is-link is-outlined" href={{ '/car/edit/' + car.id }}>
              <span>Edit</span>
              <span class="icon is-small">
                <i class="fas fa-edit"></i>
              </span>
            </a>
            <button class="button is-danger is-outlined delete-button">
              <span>Delete</span>
              <span class="icon is-small">
                <i class="fas fa-times"></i>
              </span>
            </button>
          </div>
        </div>
      </div>
      {% include "car/views/layouts/delete-modal.njk" %}
    </div>
  </section>
{% endblock %}

{% block footerScripts %}
  <script type="text/javascript" src="/js/toggle-modal.js"></script>
{% endblock %}
