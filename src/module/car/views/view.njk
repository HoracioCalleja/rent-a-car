{% extends "views/layouts/base.njk" %}

{% block body %}
  <section class="section is-light">
    <div class="car-data"
      data-id="{{ car.id }}"
      data-brand="{{ car.brand }}"
      data-model="{{ car.model }}"
      data-year="{{ car.year }}"
      >
      <div class="container">
        <div class="columns">
          <div class="column">
            <h1 class="title">
              {{ car.brand }}
              {{ car.model }}
              {{ car.year }}
            </h1>
            <table class="table">
              <tbody>
                <tr>
                  <th>ID</th>
                  <td>{{ car.id }}</td>
                </tr>
                <tr>
                  <th>Brand</th>
                  <td>{{ car.brand }}</td>
                </tr>
                <tr>
                  <th>Model</th>
                  <td>{{ car.model }}</td>
                </tr>
                <tr>
                  <th>Year</th>
                  <td>{{ car.year }}</td>
                </tr>
                <tr>
                  <th>Kilometer Count</th>
                  <td>{{ car.kms }} kms</td>
                </tr>
                <tr>
                  <th>Color</th>
                  <td>{{ car.color }}</td>
                </tr>
                <tr>
                  <th>Air Conditioner</th>
                  <td>{{ car.ac }}</td>
                </tr>
                <tr>
                  <th>Max passengers</th>
                  <td>{{ car.passengers }}</td>
                </tr>
                <tr>
                  <th>Transmission</th>
                  <td>{{ car.transmission }}</td>
                </tr>
                <tr>
                  <th>Price</th>
                  <td>$ {{ car.price }}</td>
                </tr>
                <tr>
                  <th>Created</th>
                  <td>{{ car.createdAt }}</td>
                </tr>
                <tr>
                  <th>Updated</th>
                  <td>{{ car.updatedAt }}</td>
                </tr>
              </tbody>
            </table>
            <div class="buttons">
              <a class="button is-link is-outlined" href="{{ '/car/edit/' + car.id }}">
                <span>Edit</span>
                <span class="icon is-small">
                  <i class="fas fa-edit"></i>
                </span>
              </a>
              <button class="button is-danger is-outlined delete-button">
                <span>Delete</span>
                <span class="icon is-small">
                  <i class="fas fa-times"></i>
                </span>
              </button>
            </div>
          </div>
          <div class="column">
            <img src="{{ car.img if car.img else '/img/no-image-available.jpg' }}" alt="car-image">
          </div>
        </div>
      </div>
    </div>
    {% include "car/views/layouts/delete-modal.njk" %}
  </section>
{% endblock %}

{% block footerScripts %}
  <script type="text/javascript" src="/js/toggle-modal.js"></script>
{% endblock %}
