{% extends "views/layouts/base.njk" %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/manage.css">
{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <h1 class="title">There are currently {{ users.length }} total users.</h1>
      <table class="table align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>ID Type</th>
            <th>ID Number</th>
            <th>Nationality</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Birth Date</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
            {% include "user/views/layouts/table-row.njk" %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>
{% endblock %}
